<!DOCTYPE html>
<html lang="en">
<% include ../partials/head.ejs %>
<style>
	html {
		background: url(../images/loginbackground.jpg) no-repeat center center fixed;
		/*cross browser styling*/
		-webkit-background-size: cover;
		-moz-background-size: cover;
		-o-background-size: cover;
		background-size: cover;
	}
</style>

<body>
<div class="container" id="home-content">
	<div class="center-align">
		<div class="row">
			<div class="col s6 m6 offset-m3">
				<div class="card">
					<div class="card-content grey lighten-2">
						<h2>Login</h2>
						<div class="row">
							<form class="col s12" method="POST">
								<div class="row">
									<div class="input-field col s6">
										<i class="material-icons prefix">account_circle</i>
										<input id="icon_prefix" type="text" name="username" class="validate">
										<label for="icon_prefix">Username</label>
									</div>
									<div class="input-field col s6">
										<i class="material-icons prefix">lock_outline</i>
										<input id="icon_telephone" type="Password" name="password" class="validate">
										<label for="icon_telephone">Password</label>
									</div>
									<button class="btn waves-effect waves-yellow yellow darken-2 center" type="submit" name="action">Submit
										<i class="material-icons right">send</i>
									</button>
									<%if (error) { %>
											<%if (error === true) { %>
											    <div class="collection center red lighten-2 error">
											 	  <a class=" grey-text text-lighten-3 red lighten-2"><i class="material-icons left">cancel</i>Invalid Credentials! Please Retry or Register</a>
  												</div>
											<% } %>
									<% } %>
								</div>
							</form>
						</div>
						<a href="#" id="deactivator" class="activator">Register Now</a>
					</div>
					<div class="card-reveal grey lighten-2">
						<h2>Register</h2>
						<div class="row">
							<form class="col s12" method="POST">
								<div class="row">

									<div class="input-field col s6">
										<i class="material-icons prefix">account_circle</i>
										<input id="icon_prefix" type="text" name="username_reg" class="validate">
										<label for="icon_prefix">Username</label>
									</div>
									<div class="input-field col s6">
										<i class="material-icons prefix">lock_outline</i>
										<input id="icon_telephone" type="Password" name="password_reg" class="validate">
										<label for="icon_telephone">Password</label>
									</div>

									<button class="btn waves-effect waves-yellow yellow darken-2 center" type="submit" name="action">Submit
										<i class="material-icons right">send</i>
									</button>
								</div>
							</form>
						</div>
						<a href="#" id="deactivator" class="card-title">Login</a>
					</div>
				</div>
			</div>
		</div>
	</div>
    <% include ../partials/scripts.ejs %>

</body>
</html>