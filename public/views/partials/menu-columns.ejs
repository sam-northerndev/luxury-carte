<div id="menu-content" class="container">
    <div class="row">
        <h2 id="home-heading">Menu</h2>
    </div>
    <div class="row">
        <div class="col s12 m10 offset-m1">
            <div id="menu" class="card">


                <a class="card-title" style="text-align:center" href="/getItalianFood"><p href="/getData">Italian Food</p></a>
                <a class="card-title" style="text-align:center" href="/getJapaneseFood"><p href="/getData">Japanese Food</p></a>
                <hr class="style">
                <div>
                    <table class="highlight centered">
                        <thead class="basket" >
                            <th>Dish</th>
                            <th>Ingredients</th>
                            <th>Price</th>
                            <th>Add to Basket</th>
                        </thead>
                        <tbody>
                            <%if (ejsData.length > 0) { %>

                                <% for(var i=0; i < ejsData.length; i++) { %>
                                    <tr>
                                        <td><%- ejsData[i].foodName %></td>
                                        <td><%- ejsData[i].description %></td>
                                        <td>$<%- ejsData[i].foodPrice %></td>
                                        <td><a id="gold-button" class="waves-effect waves-light btn-small" onclick="addBasket(this);"><i class="fas fa-shopping-basket"></i></a></td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>

                </div>
            </div>

        </div>
    </div>
</div>