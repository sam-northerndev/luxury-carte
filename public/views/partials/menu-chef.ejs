<div id="menu-content" class="container">
    <div class="row">
        <h2 id="home-heading">Menu</h2>
    </div>
    <div class="row">
        <div class="col s12 m10 offset-m1">
            <!-- Chef CARD -->
            <div id="menu-chefs" class="card">

                <a class="card-title" style="text-align:center"><p>Chef Options</p></a>
                <hr class="style">
                <div>
                    <table class="highlight centered">
                        <thead class="basket" >
                            <th>Chef</th>
                            <th>Specialty</th>
                            <th>Price</th>
                            <th>Add to Basket</th>
                        </thead>
                        <tbody>
                            <%if (ejsData.length > 0) { %>

                                <% for(var i=0; i < ejsData.length; i++) { %>
                                    <tr>
                                        <td><%- ejsData[i].firstName + " " + ejsData[i].lastName %></td>
                                        <td><%- ejsData[i].specialty %></td>
                                        <td>$<%- ejsData[i].foodPrice %></td>
                                        <td><a id="gold-button" class="waves-effect waves-light btn-small" onclick="addBasket(this);"><i class="fas fa-shopping-basket"></i></a></td>
                                    </tr>
                                <% } %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
                <div class="nextMenu center>
                    <a href="/getDecor" id="gold-button" class="waves-effect waves-light btn-small"> Continue to Decor</a>
                </div>
            </div>

        </div>
    </div>
</div>